/*
* Finished state -> exit the simulation
*/

analog begin
    @(timer( next_state_time )) begin
        if (state == STATE_FINISHED ) begin
            if (fail == 0) begin
               $strobe("[PASSED] All states passed. No errors detected.");
            end else begin
               $strobe("[FAILED] All states did NOT pass. ERRORS DETECTED.");
            end
 
            $finish_current_analysis;
        end
    end
end
